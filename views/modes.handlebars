<section class="w-full px-2 md:px-0 mt-10 md:w-auto md:container mx-auto text-center">
    <a href="/admin/new_mode" class="text-md md:text-xl">
        <button class="bg-green-200 text-gray-800 w-5/6 font-bold md:w-4/12 rounded px-2 py-2 hover:bg-green-100">New Mode</button>
    </a>
</section>
<section class="w-full px-2 md:px-0 md:w-auto md:container mx-auto text-center">
    <table class="text-center p-6 w-full mt-10 text-gray-50 text-md md:text-xl">
        <tr class="w-full border border-solid border-1 border-white">
            <th class="w-3/6 p-2">Mode</th>
            <th class="w-3/6 p-2">Link</th>
        </tr>
        {{#each modes}}
            <tr>
                <td class="p-2">{{name}}</td>
                <td class="p-2">
                    <a href="/admin/mode/delete/{{ _id }}">
                        <button class="bg-red-200 text-gray-800 w-4/12 rounded px-2 py-2 hover:bg-red-100">Delete</button>
                    </a>
                </td>
            </tr>
        {{/each}}
    </table>
</section>